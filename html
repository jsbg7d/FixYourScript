  <script>
    document.getElementById('uploadForm').addEventListener('submit', function(e) {
      e.preventDefault();
      const fileInput = document.getElementById('scriptFile');
      const status = document.getElementById('status');
      if (!fileInput.files.length) {
        status.textContent = 'Please select a script file.';
        return;
      }

      const file = fileInput.files[0];
      const reader = new FileReader();
      reader.onload = function(event) {
        const scriptContent = event.target.result;
        status.textContent = 'Script loaded. Ready for processing...';
        console.log("Uploaded script:\n", scriptContent);
        // Here you would send scriptContent to your backend or GPT API
      };
      reader.readAsText(file);
    });
  </script>
